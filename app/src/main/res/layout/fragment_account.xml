<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F12"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/secondarycolor"
            app:cardCornerRadius="16dp"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/malware"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Profile Picture"
                    android:layout_marginBottom="12dp" />

                <!-- Name -->
                <TextView
                    android:id="@+id/accountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <!-- Email -->
                <TextView
                    android:id="@+id/accountEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.doe@example.com"
                    android:textColor="#B0B3B8"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- User Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/secondarycolor"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Information"
                    android:textColor="#22E57A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    android:text="Phone: N/A"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:text="Address: N/A"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <!-- Edit Profile Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#22E57A"
                android:background="@drawable/button_outline_green"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:elevation="2dp" />

            <!-- Logout Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#D93B3B"
                android:background="@drawable/button_outline_red"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:padding="12dp"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
