<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F12"
    android:padding="16dp"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Stats Horizontal Scroll -->
        <HorizontalScrollView
            android:id="@+id/statsHorizontalScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="none"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Scans Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_outline_green"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvScansLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SCANS"
                            android:textColor="#1DB954"
                            android:textSize="12sp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:id="@+id/tvScansCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1247"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Threat Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_outline_red"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvThreatLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="THREAT"
                            android:textColor="#FF0000"
                            android:textSize="12sp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:id="@+id/tvThreatCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1247"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Malicious Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_outline_yellow"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvMaliciousLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MALICIOUS"
                            android:textColor="#FFD93D"
                            android:textSize="12sp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:id="@+id/tvMaliciousCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1247"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Quick Actions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1A1F26"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="QUICK ACTIONS"
                    android:layout_gravity="left"
                    android:textColor="#1DB954"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnStartScan"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/green_button"
                        android:gravity="center"
                        android:drawableLeft="@drawable/play"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:text="START SCAN"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:tint="@android:color/white"/>

                    <Button
                        android:id="@+id/btnViewReports"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/blue_button"
                        android:gravity="center"
                        android:drawableLeft="@drawable/analysis"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:text="VIEW REPORTS"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:tint="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <include layout="@layout/recent_activity_layout"/>

    </LinearLayout>
</ScrollView>
