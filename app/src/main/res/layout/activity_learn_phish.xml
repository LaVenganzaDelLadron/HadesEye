<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F12"
    tools:context=".LearnPhishActivity">

    <!-- Toolbar with Back Button -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarLearnPhish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondarycolor"
        android:paddingTop="30dp"
        app:navigationIcon="@drawable/arrow_left"
        app:navigationIconTint="@color/white"
        app:title="Learn Phish"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarLearnPhish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#121418"
                app:cardElevation="3dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvWhatIsPhishing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What is Phishing?"
                        android:textColor="#1DB954"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvPhishingDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phishing is a cyberattack that uses disguised emails or websites to trick individuals into revealing sensitive information, such as passwords, banking details, or personal data."
                        android:textColor="#BBBBBB"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Example Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#121418"
                app:cardElevation="3dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvExampleHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Example:"
                        android:textColor="#FFD93D"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvPhishingExample"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="An attacker might send an email pretending to be from your bank, asking you to log in to verify your account. The provided link leads to a fake website that collects your credentials."
                        android:textColor="#BBBBBB"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Prevention Tips -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#121418"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTipsHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How to Protect Yourself:"
                        android:textColor="#1DB954"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvTipsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Never click on suspicious links.\n• Verify the sender’s email address.\n• Use 2FA on your accounts.\n• Keep your browser and apps up-to-date.\n• Use anti-phishing tools."
                        android:textColor="#BBBBBB"
                        android:textSize="15sp"
                        android:lineSpacingExtra="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
