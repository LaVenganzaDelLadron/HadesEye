<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primarycolor"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“¡ Network Scanner"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan open ports on target IP address"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etTargetIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter target IP address"
        android:textColorHint="@color/grey"
        android:textColor="@color/white"
        android:background="@drawable/history_item_bg"
        android:padding="12dp"
        android:inputType="text"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnGetLocalIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Local IP"
        android:backgroundTint="@color/grey"
        android:textColor="@color/primarycolor"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnScanNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Network"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/primarycolor"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results will appear here"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/history_item_bg"
            android:padding="12dp"/>
    </ScrollView>

</LinearLayout>
