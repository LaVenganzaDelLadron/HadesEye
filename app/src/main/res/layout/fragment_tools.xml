                android:text="Check passwords and emails for breaches"
                android:textSize="12sp"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <!-- Network Scanner -->
        <LinearLayout
            android:id="@+id/layoutNetworkScanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/history_item_bg"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¡ Network Scanner"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan networks for open ports"
                android:textSize="12sp"
